{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gst-indent",
            "type": "shell",
            "command": "indent",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "args": [
                "--braces-on-if-line",
                "--case-brace-indentation0",
                "--case-indentation2",
                "--braces-after-struct-decl-line",
                "--line-length80",
                "--no-tabs",
                "--cuddle-else",
                "--dont-line-up-parentheses",
                "--continuation-indentation4",
                "--honour-newlines",
                "--tab-size8",
                "--indent-level2",
                "--leave-preprocessor-space",
                "${file}"
            ]
        },
    ]
}